<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:theme="@style/CustomActionBarTheme"
    tools:ignore="MissingPrefix">

    <Button

        android:id="@+id/tohubButton"
        fontPath="Capsuula.ttf"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/CafeMenuButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignRight="@+id/CafeMenuButton"
        android:layout_below="@+id/CafeMenuButton"
        android:background="@drawable/hub_image"
        android:clickable="true"
        android:enabled="true"
        android:singleLine="true"
        android:text="Social Hub"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="@color/secondary"
        android:textSize="36sp" />

    <Button

        android:id="@+id/calenderButton"
        fontPath="Capsuula.ttf"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/tohubButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tohubButton"
        android:layout_below="@+id/tohubButton"
        android:background="@drawable/calendar"
        android:clickable="true"
        android:enabled="true"
        android:singleLine="true"
        android:text="Calendar"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="@color/secondary"
        android:textSize="36sp" />

    <Button
        android:id="@+id/CafeMenuButton"
        fontPath="Capsuula.ttf"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cafe_image_two"
        android:clickable="true"
        android:enabled="true"
        android:singleLine="true"
        android:text="Cafeteria Menu"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="@color/secondary"
        android:textSize="36sp" />

    <Button
        android:id="@+id/NewsFeed"
        fontPath="Capsuula.ttf"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/calenderButton"
        android:background="@drawable/news"
        android:clickable="true"
        android:enabled="true"
        android:singleLine="true"
        android:text="News Feed"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="@color/secondary"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/welcomLabel"
        fontPath="Capsuula.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NewsFeed"
        android:layout_centerHorizontal="true"
        android:text="Welcome currently it is:"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/dateLabel"
        fontPath="Capsuula.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomLabel"
        android:layout_centerHorizontal="true"
        android:text="Connecting to the"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dayAndPeriodLabel"
        fontPath="Capsuula.ttf"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/dateLabel"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:text="Internet ..."
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/loading"
        android:nestedScrollingEnabled="true"
        android:background="#d92a2a2a"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/NewsFeed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/spin_animation" />


</RelativeLayout>
