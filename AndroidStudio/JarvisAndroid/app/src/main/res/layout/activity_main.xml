<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:theme="@style/CustomActionBarTheme">


    tools:context=".MainActivity">

    <Button

        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Social Hub"
        android:id="@+id/tohubButton"
        android:singleLine="true"
        android:textSize="36sp"
        android:textColor="#FFFFFFFF"

        fontPath="Capsuula.ttf"
        android:layout_below="@+id/CafeMenuButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/CafeMenuButton"
        android:layout_alignEnd="@+id/CafeMenuButton"
        android:background="@drawable/hub_image"
        android:clickable="true"
        android:enabled="true"
        android:textColorHighlight="@color/secondary" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Calender"
        android:id="@+id/calenderButton"
        android:singleLine="true"
        android:textSize="36sp"
        android:textColor="#FFFFFFFF"
        fontPath="Capsuula.ttf"
        android:layout_below="@+id/tohubButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tohubButton"
        android:layout_alignEnd="@+id/tohubButton"
        android:background="@drawable/calendar"
        android:clickable="true"
        android:enabled="true"
        android:textColorHighlight="@color/secondary" />

    <Button
        fontPath="Capsuula.ttf"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Cafeteria Menu"
        android:id="@+id/CafeMenuButton"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="36sp"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/cafe_image_two"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:enabled="true"
        android:textColorHighlight="@color/secondary" />

    <Button
        android:singleLine="true"
        android:textSize="36sp"
        android:textColor="#FFFFFFFF"
        fontPath="Capsuula.ttf"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="News Feed"
        android:id="@+id/NewsFeed"
        android:layout_below="@+id/calenderButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/news"
        android:clickable="true"
        android:enabled="true"
        android:textColorHighlight="@color/secondary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome currently it is:"
        android:id="@+id/welcomLabel"
        android:textSize="18sp"
        android:layout_below="@+id/NewsFeed"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        fontPath="Capsuula.ttf"

        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Texta"
        android:id="@+id/dateLabel"
        android:layout_below="@+id/welcomLabel"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        fontPath="Capsuula.ttf"

        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="Capsuula.ttf"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No school enjoy chrisma break"
        android:id="@+id/dayAndPeriodLabel"
        android:layout_below="@+id/dateLabel"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:singleLine="false"
        android:textStyle="bold" />


</RelativeLayout>
