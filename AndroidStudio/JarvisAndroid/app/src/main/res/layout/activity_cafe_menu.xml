<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jarvis.mahan.jarvisandroid.CafeMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cafeteria Menu"
        android:id="@+id/cafemenuTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp" />

    <ListView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/wednesdayList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cafemenuTitle"
        android:layout_alignEnd="@+id/cafemenuTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wednesday&apos;s Menu"
        android:id="@+id/wednesdayMenuTitle"
        android:layout_above="@+id/wednesdayList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#ff000bff" />

    <ListView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/thursdayMenu"
        android:layout_above="@+id/wednesdayMenuTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/wednesdayList"
        android:layout_alignEnd="@+id/wednesdayList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Thursday&apos;s Menu"
        android:id="@+id/thursdayMenuTitle"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#ff000bff"
        android:layout_above="@+id/thursdayMenu"
        android:layout_alignParentLeft="true" />

    <ListView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fridayMenu"
        android:layout_above="@+id/thursdayMenuTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Friday&apos;s Menu"
        android:id="@+id/fridayMenuTitle"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#ff000bff"
        android:layout_above="@+id/fridayMenu"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
