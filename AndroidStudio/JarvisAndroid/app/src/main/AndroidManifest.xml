<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jarvis.mahan.jarvisandroid" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"

        android:icon="@drawable/bullodg_cropped"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Hub"
            android:label="@string/title_activity_hub"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jarvis.mahan.jarvisandroid.MainActivity" />
        </activity>
        <activity
            android:name=".Calender"
            android:label="@string/title_activity_calender"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jarvis.mahan.jarvisandroid.MainActivity" />
        </activity>
        <activity

            android:name=".CafeMenu"
            android:label="@string/title_activity_cafe_menu"
            android:theme="@style/CustomActionBarTheme"
        android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jarvis.mahan.jarvisandroid.MainActivity" />
        </activity>
    </application>

</manifest>
